@model Category

<form method="post">
       <div class="card shadow">
           <div class="card-header">
            <h2>Edit Category</h2>
           </div>
           <div class="card-body">
            <div class="row m-0 p-0">
                <div class="col-12">
                    @* good practice to always include Id then hide it *@
                    <input asp-for="Id" hidden />
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-12 mt-4">
                    <label asp-for="DisplayOrder" class="form-label"></label>
                    <input asp-for="DisplayOrder" class="form-control" placeholder="Enter display order" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-4 justify-content-between m-0 p-0">
                <div class="col-12 mb-2 col-md-3 col-lg-2">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary w-100">
                        <i class="bi bi-arrow-return-left me-1"></i>
                        Back
                    </a>
                </div>
                <div class="col-lg-2 col-12 col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        Update
                        <i class="bi bi-send ms-1"></i>
                    </button>
                </div>
            </div>
           </div>
       </div>
</form>

@section Scripts {
  @{
    <partial name="_ValidationScriptsPartial" />
  }
}